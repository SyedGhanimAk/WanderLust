<head>
    <link rel="stylesheet" href="../css/style.css">


</head>

<body>



    <nav class="navbar sticky-top navbar-expand-md border-bottom">
        <div class="container-fluid">

            <a href="/listings" class="navbar-brand"><i class="fa-regular fa-compass "></i></a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">

                <div class="navbar-nav small">
                    <a class="nav-link" href="/listings">Explore</a>


                </div>

                <form class="d-flex ms-auto" role="search">
                    <input class="nav-search form-control me-2" type="search" placeholder="Search destinations"
                        aria-label="Search">
                    <button class=" d-flex btn btn-outline-success" type="submit">
                        <i class="fa-solid mt-1 fa-magnifying-glass me-2 "></i>
                        Search</button>
                </form>

                <div class="navbar-nav ms-auto small">
                    <a class="nav-link" href="/listings/new">Airbnb your home</a>
                    <% if(!userDetails) {%>

                        <a class="nav-link" href="/login"><b>Log in</b> </a>
                        <a class="nav-link" href="/signup"><b>Sign up</b></a>
                        <%} else{ %> <a class="nav-link" href="/logout">Log out</a>
                            <%} %>



                </div>

            </div>
        </div>
    </nav>
    <script>
        let nav_toggle = document.querySelector(".navbar-toggler");
        let navbar = document.querySelector(".navbar");
        nav_toggle.addEventListener("click", () => {
            navbar.classList.toggle("nav-height-small-screen");
        })
    </script>
</body>